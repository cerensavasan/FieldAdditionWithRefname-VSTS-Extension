{
  "compilerOptions": {
    /* Basic Options */
    "module": "amd",                     /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5","es6","dom"],                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017','ES2018' or 'ESNEXT'. */
    "noImplicitAny": false,
    "listEmittedFiles": true,
    "jsx": "react",
    "sourceMap": false,    
    "baseUrl": "./",
    "paths": {
      "OfficeFabric/*": ["node_modules/office-ui-fabric-react/lib-amd/*"]
    },	
    "types": ["q", "react", "react-dom"]   
  },
  "include": [
    "src/App.tsx", "src/NameWithReferenceComponent.tsx"
  ]
}